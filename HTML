    <script>
        const checklistData = [
            {
                category: "Core Equipment",
                items: [
                    { name: "Photo Booth Camera (DSLR/Mirrorless)", description: "Canon R100, Canon EOS Rebel, or similar professional camera", priority: "essential" },
