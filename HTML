        let checkedState = {};
        let editingItem = null;

        function initializeChecklist() {
            const container = document.getElementById('categoriesContainer');
            container.innerHTML = '';

            checklistData.forEach((category, categoryIndex) => {
                const categoryCard = document.createElement('div');
                categoryCard.className = 'category-card';
                categoryCard.dataset.category = category.category;

                const checkedCount = category.items.filter((item, itemIndex) => 
                    checkedState[`${categoryIndex}-${itemIndex}`]
                ).length;
                const totalCount = category.items.length;

                categoryCard.innerHTML = `
                    <div class="category-header">
                        <h2 class="category-title">${category.category}</h2>
                        <span class="category-progress">${checkedCount}/${totalCount}</span>
                    </div>
                    <div class="checklist-items">
                        ${category.items.map((item, itemIndex) => {
                            const itemId = `${categoryIndex}-${itemIndex}`;
                            const isChecked = checkedState[itemId] || false;
                            return `
                                <div class="checklist-item ${isChecked ? 'checked' : ''}">
                                    <div class="checkbox ${isChecked ? 'checked' : ''}" id="checkbox-${itemId}" onclick="toggleItem('${itemId}')"></div>
                                    <div class="item-content" onclick="toggleItem('${itemId}')" style="cursor: pointer;">
                                        <div class="item-name">
                                            ${item.name}
                                            <span class="priority-badge priority-${item.priority}">${item.priority}</span>
                                        </div>
                                        <div class="item-description">${item.description}</div>
                                        <div class="edit-controls">
                                            <button class="edit-btn edit-btn-edit" onclick="event.stopPropagation(); editItem(${categoryIndex}, ${itemIndex})">Edit</button>
                                            <button class="edit-btn edit-btn-delete" onclick="event.stopPropagation(); deleteItem(${categoryIndex}, ${itemIndex})">Delete</button>
                                        </div>
                                    </div>
                                </div>
                            `;
                        }).join('')}
                    </div>
                `;

                container.appendChild(categoryCard);
            });

            updateStats();
        }

        function toggleItem(itemId) {
            checkedState[itemId] = !checkedState[itemId];
            initializeChecklist();
        }

        function updateStats() {
            const totalItems = checklistData.reduce((sum, cat) => sum + cat.items.length, 0);
            const checkedItems = Object.values(checkedState).filter(Boolean).length;
            const completionRate = totalItems > 0 ? Math.round((checkedItems / totalItems) * 100) : 0;

            document.getElementById('totalItems').textContent = totalItems;
            document.getElementById('checkedItems').textContent = checkedItems;
            document.getElementById('completionRate').textContent = `${completionRate}%`;
        }

        function resetAll() {
            if (confirm('Are you sure you want to reset all checkboxes? This will uncheck all items.')) {
                checkedState = {};
                initializeChecklist();
            }
        }

        function printChecklist() {
            window.print();
        }

        function addNewItem() {
            editingItem = null;
            document.getElementById('modalTitle').textContent = 'Add New Item';
            document.getElementById('itemForm').reset();
            populateCategoryDropdown();
            document.getElementById('itemModal').classList.add('active');
        }

        function editItem(categoryIndex, itemIndex) {
            editingItem = { categoryIndex, itemIndex };
            const item = checklistData[categoryIndex].items[itemIndex];
            
            document.getElementById('modalTitle').textContent = 'Edit Item';
            document.getElementById('itemName').value = item.name;
            document.getElementById('itemDescription').value = item.description;
            document.getElementById('itemPriority').value = item.priority;
            
            populateCategoryDropdown();
            document.getElementById('itemCategory').value = checklistData[categoryIndex].category;
            
            document.getElementById('itemModal').classList.add('active');
        }

        function deleteItem(categoryIndex, itemIndex) {
            const item = checklistData[categoryIndex].items[itemIndex];
            if (confirm(`Are you sure you want to delete "${item.name}"?`)) {
                checklistData[categoryIndex].items.splice(itemIndex, 1);
                
                // Remove empty categories
                if (checklistData[categoryIndex].items.length === 0) {
                    checklistData.splice(categoryIndex, 1);
                }
                
                // Clean up checked state
                const oldItemId = `${categoryIndex}-${itemIndex}`;
                delete checkedState[oldItemId];
                
                initializeChecklist();
            }
        }

        function closeModal() {
            document.getElementById('itemModal').classList.remove('active');
            editingItem = null;
        }

        function populateCategoryDropdown() {
            const select = document.getElementById('itemCategory');
            select.innerHTML = '<option value="">Select category...</option>';
            
            checklistData.forEach(cat => {
                const option = document.createElement('option');
                option.value = cat.category;
                option.textContent = cat.category;
                select.appendChild(option);
            });
            
            const newOption = document.createElement('option');
            newOption.value = '__new__';
            newOption.textContent = '+ Create New Category';
            select.appendChild(newOption);
        }

        function saveItem(event) {
            event.preventDefault();
            
            let categoryName = document.getElementById('itemCategory').value;
            const itemName = document.getElementById('itemName').value;
            const itemDescription = document.getElementById('itemDescription').value;
            const itemPriority = document.getElementById('itemPriority').value;
            
            if (categoryName === '__new__') {
                categoryName = prompt('Enter new category name:');
                if (!categoryName) return;
            }
            
            const newItem = {
                name: itemName,
                description: itemDescription,
                priority: itemPriority
            };
            
            if (editingItem !== null) {
                // Update existing item
                const { categoryIndex, itemIndex } = editingItem;
                const oldCategory = checklistData[categoryIndex].category;
                
                if (oldCategory !== categoryName) {
                    // Moving to different category
                    checklistData[categoryIndex].items.splice(itemIndex, 1);
                    if (checklistData[categoryIndex].items.length === 0) {
                        checklistData.splice(categoryIndex, 1);
                    }
                    
                    let targetCategory = checklistData.find(cat => cat.category === categoryName);
                    if (!targetCategory) {
                        targetCategory = { category: categoryName, items: [] };
                        checklistData.push(targetCategory);
                    }
                    targetCategory.items.push(newItem);
                } else {
                    // Same category, just update
                    checklistData[categoryIndex].items[itemIndex] = newItem;
                }
            } else {
                // Add new item
                let targetCategory = checklistData.find(cat => cat.category === categoryName);
                if (!targetCategory) {
                    targetCategory = { category: categoryName, items: [] };
                    checklistData.push(targetCategory);
                }
                targetCategory.items.push(newItem);
            }
            
            closeModal();
            initializeChecklist();
        }

        document.getElementById('searchInput').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const categories = document.querySelectorAll('.category-card');

            categories.forEach(category => {
                const items = category.querySelectorAll('.checklist-item');
                let visibleItems = 0;

                items.forEach(item => {
                    const text = item.textContent.toLowerCase();
                    if (text.includes(searchTerm)) {
                        item.classList.remove('hidden');
                        visibleItems++;
                    } else {
                        item.classList.add('hidden');
                    }
                });

                if (visibleItems === 0 && searchTerm !== '') {
                    category.classList.add('hidden');
                } else {
                    category.classList.remove('hidden');
                }
            });
        });

        initializeChecklist();
    </script>
</body>
</html>